<template>
  <div class="app-container">
    <el-card shadow="never" class="search-card">
      <el-form :inline="true" :model="queryParams" class="search-form">
        <el-form-item label="客户名称">
          <el-input v-model="queryParams.name" placeholder="请输入客户名称" clearable />
        </el-form-item>
        <el-form-item label="手机号">
          <el-input v-model="queryParams.phone" placeholder="请输入手机号" clearable />
        </el-form-item>
        <el-form-item label="跟进状态">
          <el-select v-model="queryParams.status" placeholder="全部" clearable style="width: 150px">
            <el-option label="待分配" value="待分配" />
            <el-option label="跟进中" value="跟进中" />
            <el-option label="已成交" value="已成交" />
            <el-option label="已流失" value="已流失" />
          </el-select>
        </el-form-item>
        <el-form-item>
          <el-button type="primary" @click="handleQuery">查询</el-button>
          <el-button @click="resetQuery">重置</el-button>
        </el-form-item>
      </el-form>
    </el-card>

    <el-card shadow="never" style="margin-top: 20px;">
      <template #header>
        <div class="card-header">
          <span style="font-weight: bold;">客户列表</span>
          <el-button type="primary" @click="handleAdd">新增客户</el-button>
        </div>
      </template>

      <el-table :data="tableData" v-loading="loading" border style="width: 100%">
        <el-table-column prop="customer_name" label="客户名称" width="120" fixed />
        
        <el-table-column label="手机号" width="160">
          <template #default="scope">
            <div style="display: flex; align-items: center;">
              <span>{{ scope.row.showPhone ? scope.row.phone : maskPhone(scope.row.phone) }}</span>
              <el-button link type="primary" size="small" style="margin-left: 8px;" @click="scope.row.showPhone = !scope.row.showPhone">
                <el-icon><View v-if="!scope.row.showPhone"/><Hide v-else/></el-icon>
              </el-button>
            </div>
          </template>
        </el-table-column>

        <el-table-column prop="dept_name" label="归属门店" width="150" show-overflow-tooltip />
        <el-table-column prop="owner_name" label="跟进人" width="100" />
        <el-table-column prop="follow_status" label="跟进状态" width="100">
          <template #default="scope">
            <el-tag :type="getSdkTagType(scope.row.follow_status)">{{ scope.row.follow_status || '待分配' }}</el-tag>
          </template>
        </el-table-column>
        <el-table-column prop="source" label="来源" width="120" />
        <el-table-column prop="create_time" label="创建时间" width="170" />
        <el-table-column label="操作" width="150" fixed="right">
          <template #default="scope">
            <el-button link type="primary" @click="handleEdit(scope.row)">详情/订单</el-button>
          </template>
        </el-table-column>
      </el-table>
    </el-card>

    <el-dialog 
      :title="dialog.title" 
      v-model="dialog.visible" 
      width="900px"
      :close-on-click-modal="false"
      top="5vh"
    >
      <el-tabs v-model="activeTab" @tab-change="handleTabChange">
        <el-tab-pane label="基本信息" name="info">
          <el-form :model="form" :rules="rules" ref="formRef" label-width="100px">
            <div class="ai-analysis-box" v-if="aiAnalysisResult">
              <el-alert type="success" :closable="false">
                <template #title>
                  <div style="display: flex; align-items: center; font-size: 14px; font-weight: bold;">
                    <span style="margin-right: 5px;">✨ DeepSeek 智能画像分析</span>
                  </div>
                </template>
                <div style="white-space: pre-wrap; line-height: 1.6; margin-top: 5px;">{{ aiAnalysisResult }}</div>
              </el-alert>
            </div>

            <el-divider content-position="left">
              <span>核心资料</span>
              <el-button v-if="dialog.isEdit" type="primary" link size="small" @click="handleAIAnalysis" :loading="aiLoading">
                ✨ 点击进行 AI 客户画像分析
              </el-button>
            </el-divider>

            <el-row :gutter="20">
              <el-col :span="12">
                <el-form-item label="客户名称" prop="customer_name">
                  <el-input v-model="form.customer_name" placeholder="请输入名称" />
                </el-form-item>
              </el-col>
              <el-col :span="12">
                <el-form-item label="手机号" prop="phone">
                  <el-input v-model="form.phone" placeholder="请输入手机号" />
                </el-form-item>
              </el-col>
            </el-row>
            <el-row :gutter="20">
              <el-col :span="12">
                <el-form-item label="客户来源">
                  <el-select v-model="form.source" style="width: 100%" placeholder="选择来源" allow-create filterable default-first-option>
                    <el-option label="自然进店" value="自然进店" />
                    <el-option label="抖音" value="抖音" />
                    <el-option label="天猫" value="天猫" />
                    <el-option label="转介绍" value="转介绍" />
                  </el-select>
                </el-form-item>
              </el-col>
              <el-col :span="12">
                <el-form-item label="微信号">
                  <el-input v-model="form.wechat" placeholder="选填" />
                </el-form-item>
              </el-col>
            </el-row>

            <el-divider content-position="left">意向与房产</el-divider>
            <el-row :gutter="20">
              <el-col :span="12">
                <el-form-item label="意向产品">
                  <el-select v-model="form.intent_product_id" placeholder="选择商品" style="width: 100%" filterable clearable>
                    <el-option v-for="item in productList" :key="item.id" :label="item.product_name" :value="item.id" />
                  </el-select>
                </el-form-item>
              </el-col>
              <el-col :span="12">
                <el-form-item label="流失竞品">
                  <el-select v-model="form.competitor" style="width: 100%" placeholder="选择或输入" allow-create filterable default-first-option clearable>
                    <el-option label="林氏" value="林氏" />
                    <el-option label="顾家" value="顾家" />
                    <el-option label="全友" value="全友" />
                  </el-select>
                </el-form-item>
              </el-col>
            </el-row>
            <el-row :gutter="20">
              <el-col :span="12">
                <el-form-item label="装修进度">
                  <el-select v-model="form.decoration_progress" style="width: 100%" placeholder="选择进度" allow-create filterable default-first-option>
                    <el-option label="未动工" value="未动工" />
                    <el-option label="水电" value="水电" />
                    <el-option label="泥木" value="泥木" />
                    <el-option label="软装" value="软装" />
                  </el-select>
                </el-form-item>
              </el-col>
              <el-col :span="12">
                <el-form-item label="小区地址">
                  <el-input v-model="form.community" placeholder="输入小区名" />
                </el-form-item>
              </el-col>
            </el-row>

            <el-form-item label="详细地址">
              <el-input v-model="form.address" type="textarea" :rows="2" placeholder="输入详细地址" />
            </el-form-item>
            
            <el-form-item>
              <el-button type="primary" @click="submitForm">保存基本信息</el-button>
            </el-form-item>
          </el-form>
        </el-tab-pane>

        <el-tab-pane label="订单信息" name="order" v-if="dialog.isEdit">
          <div style="margin-bottom: 15px; text-align: right;">
            <el-button type="success" @click="handleAddOrder">新建订单</el-button>
          </div>
          <el-table :data="orderList" border size="small">
            <el-table-column prop="order_no" label="订单编号" width="140" />
            <el-table-column prop="product_name" label="商品" />
            <el-table-column prop="amount" label="金额" width="100">
              <template #default="{row}">¥{{ row.amount }}</template>
            </el-table-column>
            <el-table-column prop="transaction_type" label="交易类型" width="100" />
            <el-table-column prop="is_cash_back" label="返现" width="80">
              <template #default="{row}">{{ row.is_cash_back ? '是' : '否' }}</template>
            </el-table-column>
            <el-table-column label="操作" width="100">
              <template #default="{row}">
                <el-button link type="danger" @click="handleDeleteOrder(row.id)">删除</el-button>
              </template>
            </el-table-column>
          </el-table>
        </el-tab-pane>

        <el-tab-pane label="跟进记录" name="follow" v-if="dialog.isEdit">
          <div style="margin-bottom: 15px;">
            <div style="margin-bottom: 10px; display: flex; justify-content: space-between; align-items: center;">
              <span style="font-size: 14px; font-weight: bold; color: #606266;">新增跟进：</span>
              <el-button type="warning" link size="small" @click="handleAIGenerateScript" :loading="aiScriptLoading">
                ✨ AI 生成高转化话术
              </el-button>
            </div>
            <el-input 
              v-model="newFollow.content" 
              type="textarea" 
              :rows="3" 
              placeholder="填写跟进情况，或点击上方按钮由 AI 辅助生成..." 
            />
            <div style="margin-top: 10px; display: flex; justify-content: space-between;">
              <div>
                <el-select v-model="newFollow.tag" placeholder="跟进标签" style="width: 140px; margin-right: 10px;">
                  <el-option label="初次沟通" value="初次沟通" />
                  <el-option label="意向强烈" value="意向强烈" />
                  <el-option label="邀约到店" value="邀约到店" />
                  <el-option label="跟进中" value="跟进中" />
                </el-select>
                <el-date-picker 
                  v-model="newFollow.nextDate" 
                  type="date" 
                  placeholder="下次跟进" 
                  style="width: 140px" 
                  value-format="YYYY-MM-DD"
                />
              </div>
              <el-button type="primary" @click="handleAddFollow">提交跟进</el-button>
            </div>
          </div >
          <el-timeline>
            <el-timeline-item 
              v-for="(f, idx) in followList" 
              :key="idx" 
              :timestamp="f.create_time" 
              placement="top"
            >
              <el-card>
                <h4>{{ f.follow_tag || '日常跟进' }} <small style="color: #999">{{ f.follower_name }}</small></h4>
                <p>{{ f.follow_detail }}</p>
                <p v-if="f.next_follow_time" style="font-size: 12px; color: #e6a23c; margin-top: 5px;">
                  下次计划: {{ f.next_follow_time }}
                </p>
              </el-card>
            </el-timeline-item>
          </el-timeline>
        </el-tab-pane>

        <el-tab-pane label="操作日志" name="logs" v-if="dialog.isEdit">
          <el-timeline>
            <el-timeline-item 
              v-for="(log, idx) in logs" 
              :key="idx" 
              :timestamp="log.create_time" 
              placement="top"
            >
              <el-card shadow="hover">
                <h4>{{ log.action_type }} <small style="color: #999">{{ log.operator_name }}</small></h4>
                <p>{{ log.content }}</p>
              </el-card>
            </el-timeline-item>
          </el-timeline>
        </el-tab-pane>
      </el-tabs>
    </el-dialog>

    <el-dialog title="录入订单" v-model="orderDialog.visible" width="500px" append-to-body>
      <el-form :model="orderForm" label-width="100px">
        <el-form-item label="订单编号">
          <el-input v-model="orderForm.order_no" placeholder="系统自动生成" />
        </el-form-item>
        <el-form-item label="购买商品">
          <el-select v-model="orderForm.product_id" style="width: 100%" placeholder="请选择">
            <el-option v-for="p in productList" :key="p.id" :label="p.product_name" :value="p.id" />
          </el-select>
        </el-form-item>
        <el-form-item label="订单金额">
          <el-input-number v-model="orderForm.amount" :min="0" :precision="2" style="width: 100%" />
        </el-form-item>
        <el-form-item label="交易类型">
          <el-select v-model="orderForm.transaction_type" style="width: 100%" allow-create filterable default-first-option>
            <el-option label="微信支付" value="微信支付" />
            <el-option label="支付宝" value="支付宝" />
            <el-option label="京东" value="京东" />
            <el-option label="抖音" value="抖音" />
            <el-option label="线下刷卡" value="线下刷卡" />
          </el-select>
        </el-form-item>
        <el-form-item label="是否返现">
          <el-switch v-model="orderForm.is_cash_back" :active-value="1" :inactive-value="0" />
        </el-form-item>
        <el-form-item label="返现金额" v-if="orderForm.is_cash_back">
          <el-input-number v-model="orderForm.cash_back_amount" :min="0" :precision="2" style="width: 100%" />
        </el-form-item>
      </el-form>
      <template #footer>
        <el-button @click="orderDialog.visible = false">取消</el-button>
        <el-button type="primary" @click="submitOrder">提交订单</el-button>
      </template>
    </el-dialog>
  </div>
</template>

<script setup lang="ts">
import { ref, reactive, onMounted } from 'vue'
import { getCustomerList, createCustomer, updateCustomer, getCustomerLogs, getCustomerFollows, createCustomerFollow, callAI } from '@/api/customer'
import { getProductList } from '@/api/product'
import { getOrderList, createOrder, deleteOrder } from '@/api/order'
import { View, Hide } from '@element-plus/icons-vue'
import { ElMessage, ElMessageBox } from 'element-plus'

const loading = ref(false)
const tableData = ref([])
const productList = ref<any[]>([])
const activeTab = ref('info')
const logs = ref<any[]>([])
const orderList = ref<any[]>([])
const followList = ref<any[]>([])

const aiLoading = ref(false)
const aiScriptLoading = ref(false)
const aiAnalysisResult = ref('')

const queryParams = reactive({ name: '', phone: '', status: '' })
const dialog = reactive({ visible: false, title: '', isEdit: false })
const orderDialog = reactive({ visible: false })

const form = reactive<any>({})
const orderForm = reactive({ 
  order_no: '', 
  product_id: null, 
  amount: 0, 
  transaction_type: '', 
  is_cash_back: 0,
  cash_back_amount: 0
})
const newFollow = reactive({ content: '', nextDate: '', tag: '' })

const formRef = ref()
const rules = { 
  customer_name: [{ required: true, message: '必填', trigger: 'blur' }], 
  phone: [{ required: true, message: '必填', trigger: 'blur' }] 
}

const getList = async () => {
  loading.value = true
  try {
    const res: any = await getCustomerList(queryParams)
    tableData.value = res.map((item: any) => ({ ...item, showPhone: false }))
  } finally {
    loading.value = false
  }
}

const handleQuery = () => getList()
const resetQuery = () => {
  queryParams.name = ''
  queryParams.phone = ''
  queryParams.status = ''
  getList()
}

const handleAdd = () => {
  dialog.title = '新增客户'
  dialog.isEdit = false
  dialog.visible = true
  activeTab.value = 'info'
  aiAnalysisResult.value = ''
  Object.keys(form).forEach(k => {
    if (k !== 'id') form[k] = ''
  })
  form.id = undefined
}

const handleEdit = async (row: any) => {
  dialog.title = '客户详情'
  dialog.isEdit = true
  dialog.visible = true
  activeTab.value = 'info'
  aiAnalysisResult.value = ''
  Object.assign(form, row)
  
  loadLogs(row.id)
  loadOrders(row.id)
  loadFollows(row.id)
}

const maskPhone = (phone: string) => {
  if (!phone) return ''
  return phone.replace(/(\d{3})\d{4}(\d{4})/, '$1****$2')
}

const handleTabChange = (tabName: string) => {
  if (!form.id) return
  if (tabName === 'order') loadOrders(form.id)
  if (tabName === 'logs') loadLogs(form.id)
  if (tabName === 'follow') loadFollows(form.id)
}

const loadLogs = async (id: number) => { 
  logs.value = await getCustomerLogs(id) as any 
}
const loadOrders = async (id: number) => { 
  orderList.value = await getOrderList(id) as any 
}
const loadFollows = async (id: number) => { 
  followList.value = await getCustomerFollows(id) as any 
}

const submitForm = async () => {
  await formRef.value.validate(async (valid: boolean) => {
    if (valid) {
      if (dialog.isEdit) {
        await updateCustomer(form.id, form)
        ElMessage.success('保存成功')
        loadLogs(form.id)
      } else {
        await createCustomer(form)
        ElMessage.success('新增成功')
        dialog.visible = false
      }
      getList()
    }
  })
}

const handleAddOrder = () => {
  orderDialog.visible = true
  orderForm.order_no = 'OD' + Date.now()
  orderForm.amount = 0
  orderForm.product_id = null
  orderForm.transaction_type = ''
  orderForm.is_cash_back = 0
  orderForm.cash_back_amount = 0
}

const submitOrder = async () => {
  if (!orderForm.product_id || !orderForm.amount) return ElMessage.warning('请填写商品和金额')
  
  await createOrder({ ...orderForm, customer_id: form.id })
  ElMessage.success('订单创建成功')
  orderDialog.visible = false
  loadOrders(form.id)
  getList()
}

const handleDeleteOrder = async (id: number) => {
  ElMessageBox.confirm('确认删除此订单?', '提示').then(async () => {
    await deleteOrder(id)
    ElMessage.success('已删除')
    loadOrders(form.id)
  })
}

const handleAddFollow = async () => {
  if (!newFollow.content) return ElMessage.warning('请输入跟进内容')
  
  await createCustomerFollow(form.id, {
    customer_id: form.id,
    follow_detail: newFollow.content,
    follow_tag: newFollow.tag,
    next_follow_time: newFollow.nextDate || null
  })
  
  ElMessage.success('跟进记录已提交')
  
  newFollow.content = ''
  newFollow.tag = ''
  newFollow.nextDate = ''
  
  loadFollows(form.id)
  loadLogs(form.id)
  getList()
}

const getSdkTagType = (s: string) => {
  if (s === '已成交') return 'success'
  if (s === '已流失') return 'info'
  return 'primary'
}

const handleAIAnalysis = async () => {
  aiLoading.value = true
  const pName = productList.value.find(p => p.id === form.intent_product_id)?.product_name || '未定'
  const prompt = `分析客户画像：${form.customer_name}, 意向:${pName}, 装修:${form.decoration_progress}, 小区:${form.community}. 给出成交概率及建议。`
  
  try {
    const res: any = await callAI(prompt)
    if (res && res.result) aiAnalysisResult.value = res.result
  } catch (e) { console.error('AI Error:', e) }
  finally { aiLoading.value = false }
}

const handleAIGenerateScript = async () => {
  aiScriptLoading.value = true
  const pName = productList.value.find(p => p.id === form.intent_product_id)?.product_name || '家具'
  const prompt = `生成微信跟进话术。客户:${form.customer_name}, 状态:${form.follow_status}, 意向:${pName}. 要求亲切自然。`
  
  try {
    const res: any = await callAI(prompt)
    if (res && res.result) newFollow.content = res.result
  } catch (e) { console.error('AI Error:', e) }
  finally { aiScriptLoading.value = false }
}

onMounted(async () => {
  getList()
  try {
    productList.value = await getProductList() as any
  } catch (e) { console.log('加载商品失败', e) }
})
</script>

<style scoped>
.card-header { 
  display: flex; 
  justify-content: space-between; 
  align-items: center; 
}
.search-form .el-form-item {
  margin-bottom: 0;
}
.ai-analysis-box {
  margin-bottom: 20px;
  animation: fadeIn 0.5s ease;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>